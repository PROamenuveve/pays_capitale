<Magie@MDCard+MagicBehavior>

<Message@Screen>:
    id: message
    
    MDBoxLayout:
        orientation:"vertical"
        size_hint_y:None
        height:message.height*.2
        pos_hint: {"center_x": .5, "center_y": .75}
        Label:
            text:"Quel est la capitale (du/de la) "
            bold:True
            font_size:dp(18)
            color:"#ffffff"
        Label:
            text:root.parent.teste
            bold:True
            font_size:dp(18)
            color:"#ffffff"
            
    MDCard:
        md_bg_color: root.parent.colore
        size_hint:None,None
        height:dp(60)
        width:dp(60)
        radius:dp(40)
        pos_hint: {"center_x": .9, "center_y": .92}
        Label:
            text:str(root.parent.score)
            color:"#0000ff"
        
