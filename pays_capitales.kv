<Afiche@MDBoxLayout>:
    id:main
    md_bg_color: app.theme_cls.bg_dark
    orientation:"vertical"
    MDBoxLayout:
        md_bg_color: app.theme_cls.primary_dark
        size_hint_y:None
        height:main.height*.4
        FitImage:
            pos:self.pos
            source:"image/image (5).jpg"

        
    Screen:
        
        Magie:
            id:AA
            size_hint_y:None
            size_hint_x:.9
            height:dp(25)
            md_bg_color: app.theme_cls.accent_dark
            pos_hint:{"center_x":.5,"center_y":.8}
            on_press:root.parent.la_repons(root.parent.A),self.grow() if root.parent.verite else self.shake()
            Label:
                text:root.parent.A
                color:"black"
        Magie:
            id:BB
            size_hint_y:None
            size_hint_x:.9
            height:dp(25)
            md_bg_color: app.theme_cls.accent_dark
            pos_hint:{"center_x":.5,"center_y":.6}
            on_press:root.parent.la_repons(root.parent.B),self.grow() if root.parent.verite else self.shake()
            Label:
                text:root.parent.B
                color:"black"
        Magie:
            id:CC
            size_hint_y:None
